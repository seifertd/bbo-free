<%= turbo_stream.replace 'notices' do %>
  <%= render "/layouts/notices" %>
<% end %>
<% if @new_tourney -%>
  <%= turbo_stream.prepend 'tournaments' do %>
    <%= render "tournament", tournament: @tournament, animate: true %>
  <% end %>
<% else %>
  <%= turbo_stream.replace "#{dom_id(@tournament)}_row" do %>
    <%= render "tournament", tournament: @tournament, animate: true %>
  <% end %>
<% end %>
